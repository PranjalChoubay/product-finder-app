{
    "version": 2,
    "builds": [
      {
        "src": "product-finder/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      },
      {
        "src": "backend/api/index.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/api/app.py"
      },
      {
        "src": "/(.*)",
        "dest": "product-finder/dist/$1"
      }
    ],
    "installCommand": "npm install --prefix product-finder && pip install -r backend/requirements.txt",
    "buildCommand": "npm run build --prefix product-finder"
  }